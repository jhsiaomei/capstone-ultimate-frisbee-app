<h3>Edit this Field Condition:</h3>
<%= form_tag "/field_conditions/#{@field_condition.id}", method: :patch do %>
  <div class="form-group">
    <select class="form-control" name="field_id">
      <% @fields.each do |field| %>
        <option value="<%= field.id %>"><%= field.name %></option>
      <% end %>
    </select>
  </div>  <div class="form-group">
    <%= label_tag :condition %>
    <%= text_field_tag :condition, @field_condition.condition %>
  </div>
  <% hidden_field_tag :user_id, current_user.id %>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>
<br>
<div class="container">
  <%= form_tag "/fields", method: :get do %>
    <div class="form-group">
    <a href="/fields"><button class="btn btn-default">Back</button></a>
    </div>
  <% end %>
</div>

<script type="text/javascript">
$(document).ready(function () {
   var fields = $(".field-id");
  for (var i = 0; i <= fields.length; i++) {
    var field = fields[i];
    if ($(field).val() === "<%= @field.id %>") {
      field.setAttribute('selected', true);
    }
  }
});
</script>