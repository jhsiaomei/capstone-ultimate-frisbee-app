<h3>Add a new Field Condition:</h3>
<%= form_tag '/field_conditions', method: :post do %>
  <div class="form-group">
    <%= label_tag :field_id %>
    <%= text_field_tag :field_id, @field_condition.field_id %>
  </div>
  <div class="form-group">
    <%= label_tag :condition %>
    <%= text_field_tag :condition, @field_condition.condition %>
  </div>
  <% hidden_field_tag :user_id, current_user.id %>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
    <a href="/fields"><button class="btn btn-default">Back</button></a>  
  </div>
<% end %>
<br>
