<div class="row">
  <div class="col-md-6">
    <h3><%= @field.name %></h3>
    <% if @field.intersection != "" %>
      <p><%= @field.intersection %></p>
    <% else %>
      <p><%= @field_placeholder %></p>
    <% end %>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <title>Simple markers</title>
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #showmap {
        height: 300px;
      }
    </style>
    <div id="showmap"></div>
  </div>
  <div class="col-md-6">
    <h3>Field Conditions:</h3>
    <% if @field.field_conditions == [] %>
      <p>No conditions for this field have been reported.</p>
    <% else %>
      <% @field.field_conditions.each do |field_condition| %>
        <p><%= field_condition.condition %></p>
        <p><i>created on <%= field_condition.created_at.advance(:hours => -6).strftime("%A, %B %d at %I:%M %p") %></i></p>
        <hr>
      <% end %>
    <% end %>
  </div>
</div>

<script>

function initMap() {
  var myLatLng = {lat: <%= @field.latitude %>, lng: <%= @field.longitude %>};

  var showmap = new google.maps.Map(document.getElementById('showmap'), {
    zoom: 15,
    center: myLatLng
  });

  var marker = new google.maps.Marker({
    position: myLatLng,
    map: showmap,
    title: 'Hello World!'
  });
}

</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZxciPqerBead0Ay4BDH1cy9hra0BFLfc
&signed_in=true&callback=initMap"></script>

<br>
<form action="/field_conditions/new">
    <input type="submit" class="btn btn-default" value="Add a Field Condition">
</form>
<form action="/fields/<%= @field.id %>/edit">
    <input type="submit" class="btn btn-default" value="Edit this Field">
</form>
<form action="/fields">
    <input type="submit" class="btn btn-default" value="Back">
</form>
